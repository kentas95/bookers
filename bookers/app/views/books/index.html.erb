<title>WebCampBackendNew</title>

<h1>Books</h1>
  <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Body</th>
          <th colspan="3"></th>
        </tr>
      </thead>
    <tbody>
        <tr>
          <% @books.each do |book| %>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
            
            <td><%= book_to "Show", show_book_path(@book) %></td>
            <td><%= book_to "Edit", edit_book_path(@book) %></td>
            <td><%= book_to "Destroy", book_path(@book), method: :delete %></td> 
           
          <% end %>